<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <!-- Include Tailwind CSS via CDN or compile it -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
   <div class="w-full h-full p-10 bg-zinc-900 text-white">
    <a class="text-blue-500" href="/">BACK TO HOME</a>
    <h1 class="text-3xl mt-10 tracking-tighter mb-3">ALL Users</h1>

    <div class="users flex gap-3 flex-wrap">
        <% users.forEach(function(user){ %>
        <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
            <div class="h-52 w-full rounded-lg bg-zinc-700 overflow-hidden">
                <img class="w-full h-full object-cover" src="<%= user.image %>">
            </div>
            <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
            <h5 class="text-zinc-500"><%= user.email %></h5>
            <div class="flex gap-3 mt-10">
                <a class="text-zinc-200" href="">Edit User</a>
                <a class="text-red-500" href="">Delete User</a>
            </div>
        </div>
        <% }) %>
    </div>
</div>
<!-- 
    <script src="/javascripts/script1.js"></script> -->
</body>
</html>
